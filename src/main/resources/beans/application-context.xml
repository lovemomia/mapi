<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="conf" class="org.apache.commons.configuration.XMLConfiguration" init-method="load">
        <property name="fileName" value="conf/configuration.xml" />
    </bean>

    <bean class="cn.momia.mapi.common.config.Configuration">
        <property name="xmlConf" ref="conf" />
    </bean>

    <bean class="cn.momia.mapi.common.config.XmlPropertyPlaceholderConfigurer">
        <property name="conf" ref="conf" />
    </bean>

    <bean class="cn.momia.mapi.common.config.LoggerConfigurer" init-method="init">
        <property name="conf" ref="conf" />
    </bean>

    <bean class="cn.momia.mapi.common.img.ImageFile">
        <property name="domain" value="${Image.Domain}" />
    </bean>

    <bean id="requestExecutor" class="cn.momia.mapi.common.http.MomiaHttpRequestExecutor" />

    <bean id="srviceApi" class="cn.momia.service.api.ServiceApi" abstract="true">
        <property name="service" value="${Service.Base}" />
    </bean>

    <bean id="commonServiceApi" class="cn.momia.service.common.api.CommonServiceApi" parent="srviceApi" init-method="init" />
    <bean id="userServiceApi" class="cn.momia.service.user.api.UserServiceApi" parent="srviceApi" init-method="init" />
</beans>